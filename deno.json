{
  "tasks": {
    "start": "deno run src/server.ts",
    "dev": "deno run --allow-net --watch src/server.ts",
    "build": "deno compile --allow-net src/server.ts",
    "compile": "deno compile --allow-net src/server.ts --output dist/server",
    "lint": "deno lint",
    "test": "deno test"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "hono": "https://deno.land/x/hono@v4.1.0/mod.ts"
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 80,
    "semiColons": true,
    "singleQuote": false
  }
}
